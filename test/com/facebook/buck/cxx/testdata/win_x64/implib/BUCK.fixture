cxx_library(
    name = "implib",
    srcs = [
        "MathLibrary.cpp",
    ],
    compiler_flags = ["/DMATHLIBRARY_EXPORTS"],
    exported_headers = [
        "MathLibrary.h",
    ],
    header_namespace = "",
    link_style = "shared",
    preferred_linkage = "shared",
    visibility = ["PUBLIC"],
)

cxx_library(
    name = "implib_debug",
    srcs = [
        "MathLibrary.cpp",
    ],
    compiler_flags = [
        "/DMATHLIBRARY_EXPORTS",
        "/Z7",
    ],
    exported_headers = [
        "MathLibrary.h",
    ],
    header_namespace = "",
    link_style = "shared",
    linker_flags = [
        "/DEBUG",
        "/INCREMENTAL:NO",
    ],
    preferred_linkage = "shared",
    soname = "implib_debug.dll",
    visibility = ["PUBLIC"],
)

genrule(
    name = "implib_copy",
    out = "implib_copy.lib",
    cmd = "cp $(location :implib#windows-x86_64,shared[implib]) $OUT",
)
